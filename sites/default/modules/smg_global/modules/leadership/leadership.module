}

/**
 * For editing leadership nodes.
 *
 * @param object $node
 *
 * @return string
 */
function leadership_edit_node_theme($node) {
  if ($node->type == 'leadership_data_card' ||
    $node->type == 'leadership_print_profile' ||
    $node->type == 'leadership_online_profile'
  ) {

    // Only show theme to leadership user
    global $user;

    foreach ($user->roles as $key => $value) {
      if ($key == variable_get('leadership_role_name')) {
        return 'seven';
      }
    }
  }
}

/**
 * Implement hook_user_login()
 *
 * @param array  $edit
 * @param object $account
 */
function leadership_user_login(&$edit, $account) {
  $leadership_user = FALSE;
  $expo_pack_user = FALSE;

  // Get Role name of leadwise user
  $leadership_role_obj = user_role_load(variable_get('leadership_role_name'));
  $expo_pack_role_obj = user_role_load_by_name('Expo Pack User');

  foreach ($account->roles as $role) {
    if (isset($leadership_role_obj) && $role == $leadership_role_obj->name) {
      $leadership_user = TRUE;
    }
    if (isset($expo_pack_role_obj) && $role == $expo_pack_role_obj->name) {
      $expo_pack_user = TRUE;
    }
  }

  if ($leadership_user && !$expo_pack_user) {
    $edit['redirect'] = 'leaders/user/' . $account->uid;
  }

  if ($expo_pack_user) {
    $edit['redirect'] = 'leaders/user/' . $account->uid . '/expo-pack';
  }
}

/**
 * Implements hook_node_access().
 *
 * @param object $node
 * @param string $op
 * @param object $account
 *
 * @return string
 */
function leadership_node_access($node, $op, $account) {
  if (variable_get('smg_global_site') == 'aw') {
    $company_field_name = 'field_ld_company';
  }
  else {
    $company_field_name = 'field_companies';
  }
  $bundle = is_string($node) ? $node : $node->type;
  $profile_types = array(
    'leadership_data_card',
    'leadership_online_profile',
    'leadership_print_profile',
  );
  $roles = $account->roles;

  // Grant access to leadership profiles if company is assigned to
  // user (field_companies/field_ld_company on user entity).
  if (in_array($bundle, $profile_types) && ($op == 'update' || $op == 'view') && (in_array('Leadership Admin', $roles) || in_array('Leadership User', $roles))) {
    $profile_wrapper = entity_metadata_wrapper('node', $node);
    $profile_company = array_shift($profile_wrapper->$company_field_name->value());
    $user_wrpapper = entity_metadata_wrapper('user', $account);
    $user_companies = $user_wrpapper->$company_field_name->value();

    foreach ($user_companies as $user_company) {
      if ($user_company->nid == $profile_company->nid) {
        return NODE_ACCESS_ALLOW;
      }
    }
  }
  return NODE_ACCESS_IGNORE;
}

