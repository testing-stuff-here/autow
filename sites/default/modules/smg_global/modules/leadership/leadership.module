        break;
      case 'aw':
        $from = $admin_email;
        $params['brand'] = 'Automation World';
        break;
      case 'pw':
        $from = $admin_email;
        $params['brand'] = 'Packaging World';
        break;
      case 'ppoem':
        $from = $admin_email;
        $params['brand'] = 'PP-OEM';
        break;
      case 'pfw':
        $from = $admin_email;
        $params['brand'] = 'Pro Food World';
        break;
    }

    // This company already had a youtube username set. Check to see if it was
    // changed.
    if (isset($old_node->field_youtube_username['und'][0]['value'])) {
      if ($old_node->field_youtube_username['und'][0]['value'] != $form_state['values']['field_youtube_username']['und'][0]['value']) {
        $params['company_name'] = $node->title;
        $params['old_youtube_username'] = $old_node->field_youtube_username['und'][0]['value'];
        $params['new_youtube_username'] = $form_state['values']['field_youtube_username']['und'][0]['value'];

        // Send out email to youtube Amplified admin.
        drupal_mail('leadership', 'leadership_youtube_username_updated', $to, language_default(), $params, $from);
      }
    }
    else {
      // Youtube username has been added.
      if (isset($form_state['values']['field_youtube_username']['und'][0]['value']) && trim($form_state['values']['field_youtube_username']['und'][0]['value'])) {
        $params['company_name'] = $node->title;
        $params['new_youtube_username'] = $form_state['values']['field_youtube_username']['und'][0]['value'];

        // Send out email to youtube Amplified admin.
        drupal_mail('leadership', 'leadership_youtube_username_added', $to, language_default(), $params, $from);
      }
    }
  }
}

/**
 * Implements hook_mail()
 *
 * @param string $key
 * @param array  $message
 * @param array  $params
 */
function leadership_mail($key, &$message, $params) {
  switch ($key) {
    case 'leadership_youtube_username_updated':
      $message['subject'] = 'Youtube Amplified';
      $message['body'][] = "Hello, \r\n" . $params['company_name'] . " has updated their youtube username from:" . $params['old_youtube_username'] . " to:" . $params['new_youtube_username'] . " on " . $params['brand'] . ". Can you please varify that it matches what is set up in PMG YouTube Feed.";
      break;
    case 'leadership_youtube_username_added':
      $message['subject'] = 'Youtube Amplified';
      $message['body'][] = "Hello, \r\n" . $params['company_name'] . " has added their youtube username on " . $params['brand'] . ". Their youtube username is: " . $params['new_youtube_username'] . ". Can you please add their videos to PMG YouTube Feed (if you haven't done so already).";
      break;
    case 'both':
      $message['subject'] = $params['company'] . ': Data Card & Online Profile still unapproved';
      $message['body'][] = $params['message'];
      $message['headers'] += $params['headers'];
      break;
    case 'single':
      $message['subject'] = $params['company'] . ': ' . $params['unapproved'] . ' still unapproved';
      $message['body'][] = $params['message'];
      $message['headers'] += $params['headers'];
      break;
    case 'profile_unapproved':
      $message['subject'] = $params['leaders_type'] . ' Alert: ' . $params['company'] . ' data card not showing up';
      $message['body'][] = $params['message'];
      $message['headers'] += $params['headers'];
      break;
    case 'leadership_nofity_online_profile_published':
      $message['subject'] = 'Leadership Print Profile is Approved';
      $message['body'][] = "Hello, \r\n The Company Profile for " . $params['company'] . " has been approved. Head over to the Dashboard:" . $params['url'] . ".";
      break;
    case 'leadership_one_time_login_notification':
      $message['headers']['Content-Type'] = 'text/html; charset=UTF-8;';
      $message['subject'] = 'One-time Login Link for ' . variable_get('site_name');
      $message['body'][] = $params['message'];
      break;
    case 'leadership_unapproved_pp_notification':
      $message['headers']['Content-Type'] = 'text/html; charset=UTF-8;';
      $message['subject'] = 'Leadership Print Profile is Unapproved';
      $message['body'][] = $params['message'];
      break;
  }
}

