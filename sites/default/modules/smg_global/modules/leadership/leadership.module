/**
 * @param integer $session
 *
 * Returns a text file of all the taxonomies and companies associated to it.
 */
function leadership_text_output($session = NULL) {
  $output = '';
  $taxonomies = leadership_get_taxonomies(TRUE, $session, FALSE, FALSE);

  foreach ($taxonomies as $taxonomy) {
    $output .= $taxonomy->name . "\n";
    foreach ($taxonomy->companies as $company_nid => $company) {
      $output .= $company->title . "\n";
    }
    $output .= "\n\n";
  }

  drupal_add_http_header('Content-Type: text/plain');
  print drupal_html_to_text($output);
  exit(0);
}

/**
 * Return a list of terms that don't have any companies.
 *
 * @param string $site_id
 *
 * @return array $terms_without_companies
 *  List of tids that do not have companies.
 */
function leadership_get_terms_without_companies($site_id) {
  $all_taxonomies = array();
  $used_taxonomies = array();
  $terms_without_companies = array();

  // Get Vocabulary IDs.
  switch ($site_id) {
    case 'pw':
      $vocab_ids = array(31);
      break;
    case 'aw':
      $vocab_ids = array(13);
      break;
    case 'hcp':
      $vocab_ids = array(32);
      break;
    case 'ppoem':
      $vocab_ids = array(2, 3, 11);
      break;
    case 'pfw':
      $vocab_ids = array(29);
      break;
  }

  // Get all taxonomies for vocabs,
  $taxonomy_query = db_select('taxonomy_term_data', 't')
    ->fields('t', array('tid'));
  $taxonomy_query->condition('t.vid', $vocab_ids, 'IN');
  $all_taxonomies_result = $taxonomy_query->execute()->fetchAll();

  foreach ($all_taxonomies_result as $result) {
    $all_taxonomies[] = $result->tid;
  }

  // Get all taxonomies that were used in this year sessions.
  if (in_array($site_id, array('pw', 'hcp', 'aw', 'pfw'))) {
    switch ($site_id) {
      case 'aw':
        $category_table = 'field_data_field_ld_categories_technologies';
        $category_alias = 'categories';
        $category_column = 'field_ld_categories_technologies_tid';
        $company_table = 'field_data_field_ld_company';
        $company_column = 'field_ld_company_nid';
        break;

      default:
        $category_table = 'field_data_field_ld_categories';
        $category_alias = 'categories';
        $category_column = 'field_ld_categories_tid';
        $company_table = 'field_data_field_companies';
        $company_column = 'field_companies_nid';
        break;
    }


    // Join the print profile to the taxonomy table to see what terms are not
    // being used or in our case we will see which ones are not being used.
    $query = db_select('taxonomy_term_data', 't')
      ->fields('t', array('tid'));
    $query->distinct();

    $query->leftJoin($category_table, $category_alias, $category_alias . '.' . $category_column . ' = t.tid');
    $query->isNotNull($category_alias . '.' . $category_column);

    // These joins are to insure that it is this sessions items.
    $query->leftJoin($company_table, 'company', 'company.entity_id = categories.entity_id');
    $query->leftJoin('field_data_field_ld_session', 'session', 'session.entity_id = company.' . $company_column);
    $query->condition('session.field_ld_session_tid', variable_get('leadership_session_term'));
    // Make sure we only include tids where there is at least one published data card
    $query->leftJoin(
      $company_table,
      'company_data_card',
      "company.{$company_column} = company_data_card.{$company_column}"
    );
    $query->leftJoin('node', 'node', 'node.nid = company_data_card.entity_id');
    $query->condition('node.type', 'leadership_data_card');
    $query->condition('node.status', 1);


    $used_taxonomies_result = $query->execute()->fetchAll();
    foreach ($used_taxonomies_result as $data) {
      $used_taxonomies[] = $data->tid;
    }
  }
  else {
    // Since PP OEM uses multiple taxonomies, need to run multiple queries.
    $table_info = array(
      array(
        'table' => 'field_data_field_ld_categories_control_prod',
        'alias' => 'categories_controls',
        'column' => 'field_ld_categories_control_prod_tid',
      ),
      array(
        'table' => 'field_data_field_ld_categories_technologies',
        'alias' => 'categories_technologies',
        'column' => 'field_ld_categories_technologies_tid',
      ),
      array(
        'table' => 'field_data_field_ld_categories_int_equip',
        'alias' => 'categories_integrated_equip',
        'column' => 'field_ld_categories_int_equip_tid',
      ),
    );

    foreach ($table_info as $info) {
      $query = db_select('taxonomy_term_data', 't')
        ->fields('t', array('tid'));
      $query->distinct();
      $query->condition('t.vid', $vocab_ids, 'IN');
      $query->leftJoin($info['table'], $info['alias'], $info['alias'] . '.' . $info['column'] . ' = t.tid');
      $query->isNotNull($info['alias'] . '.' . $info['column']);

      // These joins are to insure that it is this sessions items.
      $query->leftJoin('field_data_field_companies', 'company', 'company.entity_id = ' . $info['alias'] . ' .entity_id');
      $query->leftJoin('field_data_field_ld_session', 'session', 'session.entity_id = company.field_companies_nid');
      $query->condition('session.field_ld_session_tid', variable_get('leadership_session_term'));

      $used_taxonomies_result = $query->execute()->fetchAll();
      foreach ($used_taxonomies_result as $data) {
        $used_taxonomies[] = $data->tid;
      }
    }
  }

  // Go through the taxonomies and find out which ones weren't used.
  foreach ($all_taxonomies as $tid) {
    if (!in_array($tid, $used_taxonomies)) {
      $terms_without_companies[] = $tid;
    }
  }

  return $terms_without_companies;
}

/**
 * Helps generate google event string for Leadership.
 *
 * @param bool   $company_event
 * @param string $event_action
 * @param string $event_label
 *
 * @return string
 */
function leadership_google_event_helper($company_event, $event_action, $event_label) {
  $event_category = ($company_event) ? 'Leadership Action - Company' : 'Leadership Action - Category';
  $event_object = "{'eventCategory': $event_category, 'eventAction': $event_action, 'eventLabel': $event_label}";
  return "ga('send', 'event', $event_object)";
}

/**
 * Helper function to get all company profiles in current session.
 *
 * @param array $mapping
 *   The leadership site mappings.
 *
 * @param integer $session
 *   The TID of the session for which to get company profiles.
 *
 * @return array
 */
function _leadership_get_current_company_profiles($mapping, $session = NULL) {
  // If no session is supplied, use the current session.
  if (empty($session)) {
    $session = variable_get('leadership_session_term');
  }

  // Get all company profiles in current session
  /** @var SelectQuery $query */
  $query = db_select('node', 'node')
    ->fields('node', array('title', 'nid'))
    ->condition('type', 'company')
    ->condition('status', '1')
    ->orderBy('title', 'asc');
  $query->leftJoin('field_data_field_ld_session', 'session', 'node.nid = session.entity_id');
  $query->condition('session.field_ld_session_tid', $session);
  $query->addField('session', 'field_ld_session_tid');
  $query->leftJoin($mapping['company_field_table'], 'companies', "companies.{$mapping['company_field_nid']} = node.nid");
  $query->condition('companies.bundle', 'user');
  $query->addField('companies', 'entity_id', 'user_id');
  $query->leftJoin($mapping['company_field_table'], 'print', "print.{$mapping['company_field_nid']} = node.nid");
  $query->condition('print.bundle', 'leadership_print_profile');
  $query->addField('print', 'entity_id', 'print_node_id');
  $query->leftJoin($mapping['company_field_table'], 'datacard', "datacard.{$mapping['company_field_nid']} = node.nid");
  $query->condition('datacard.bundle', 'leadership_data_card');
  $query->addField('datacard', 'entity_id', 'datacard_node_id');
  $query->leftJoin($mapping['company_field_table'], 'online', "online.{$mapping['company_field_nid']} = node.nid");
  $query->condition('online.bundle', 'leadership_online_profile');
  $query->addField('online', 'entity_id', 'online_node_id');
  $result = $query->execute();

  return $result;
}
